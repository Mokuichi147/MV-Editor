<FrameWidget>:
    BoxLayout:
        orientation: 'vertical'
        pos: root.pos
        Image:
            allow_stretch: True
            texture: root.image_texture
        Slider:
            id: slider
            min: 0
            max: root.frame_max
            value: 0
            on_value: root.cursor_moved(self.value)
            step: 1
            cursor_image: 'Resources/cursor.png'
            value_track: True
            value_track_color: 0, 0.5, 0.7, 1
            size_hint: 1, 0.1

<RootWidget>:
    canvas.before:
        Color:
            rgba: 0.11, 0.11, 0.11, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'File'
            FrameWidget:
        BoxLayout:
            Label:
                text: 'movie'