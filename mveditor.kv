<RootWidget>:
    canvas.before:
        Color:
            rgba: 0.11, 0.11, 0.11, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        id: root_view
        orientation: 'vertical'
        padding: 0
        # upper half
        BoxLayout:
            id: vertical_splitter_upper
            orientation: 'horizontal'
            size_hint: 1, 2.3
            BoxLayout:
                id: horizontal_splitter_left
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: 0.15, 0.15, 0.15, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size[0], self.size[1]
                # mode selection
                BoxLayout:
                    orientation: 'horizontal'
                    padding: 0, 0, 0, 0
                    size_hint: 1, None
                    height: 32
                    canvas.before:
                        Color:
                            rgba: 0.30, 0.30, 0.40, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size[0], self.size[1]
                    ToggleButton:
                        id: project_button
                        group: 'mode'
                        state: 'down'
                        text: 'Project'
                        on_press: root.project_button(self.state)
                        background_normal: app.resources_path+'mode.png'
                        background_down: app.resources_path+'mode_down.png'
                        border: 0, 0, 0, 0
                        size: 120, 32
                        size_hint: None, None
                    ToggleButton:
                        id: setting_button
                        group: 'mode'
                        text: 'Setting'
                        on_press: root.setting_button(self.state)
                        on_state: root.setting_state(self.state)
                        background_normal: app.resources_path+'mode.png'
                        background_down: app.resources_path+'mode_down.png'
                        border: 0, 0, 0, 0
                        size: 120, 32
                        size_hint: None, None
                    ToggleButton:
                        id: output_button
                        group: 'mode'
                        text: 'Output'
                        on_press: root.output_button(self.state)
                        background_normal: app.resources_path+'mode.png'
                        background_down: app.resources_path+'mode_down.png'
                        border: 0, 0, 0, 0
                        size: 120, 32
                        size_hint: None, None
                    Label:
                        size_hint: 1, 1
                # mode sub view
                BoxLayout:
                    orientation: 'horizontal'
                    padding: 0, 2, 0, 0
                    # file selection
                    BoxLayout:
                        id: file_selection_view
                        orientation: 'horizontal'
                        padding: 0, 0, 0, 0
                        BoxLayout:
                            orientation: 'vertical'
                            padding: 0, 0, 0, 0
                            size_hint: None, 1
                            width: project_dirs.width
                            # directories
                            Button:
                                id: project_select
                                on_press: root.project_selected()
                                text: ''
                                background_normal: app.resources_path+'project_select.png' if project_dirs.width != 0 else app.resources_path+'project_select_clear.png'
                                background_down: app.resources_path+'project_select.png' if project_dirs.width != 0 else app.resources_path+'project_select_clear.png'
                                size_hint: None, None
                                height: 50
                                width: project_dirs.width
                                halign: 'left'
                                valign: 'top'
                                text_size: project_dirs.width-20, self.height/2
                            ScrollView:
                                id: project_scrollview
                                canvas.before:
                                    Color:
                                        rgba: 0.20, 0.20, 0.25, 1
                                    Rectangle:
                                        pos: self.pos
                                        size: self.size[0], self.size[1]
                                size_hint: None, None
                                width: 150
                                height: file_icon_view.height - project_select.height
                                BoxLayout:
                                    id: project_dirs
                                    orientation: 'vertical'
                                    size_hint_y: None
                                    height: self.minimum_height
                        # files
                        FileChooserIconView:
                            id: file_icon_view
                            rootpath: ''
                            filters: ['*.wav', '*.mp3', '*.mp4', '*.mov', '*.jpg', '*.png', '*.ttf', '*.otf']
                            on_selection: root.file_selected(self.selection)
                    # setting
                    BoxLayout:
                        id: setting_view
                        orientation: 'horizontal'
                        padding: 0, 0, 0, 0
                        ScrollView:
                            id: setting_left
                            do_scroll_y: True
                            scroll_y: setting_right.scroll_y
                            size_hint: None, 1
                            width: 200
                            canvas.before:
                                Color:
                                    rgba: 0.20, 0.20, 0.25, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size[0], self.size[1]
                            BoxLayout:
                                id: setting_view_left
                                orientation: 'vertical'
                                padding: 0, 0, 0, 0
                                size_hint_y: None
                                height: self.minimum_height
                        ScrollView:
                            id: setting_right
                            do_scroll_y: True
                            scroll_y: setting_left.scroll_y
                            BoxLayout:
                                id: setting_view_right
                                orientation: 'vertical'
                                padding: 0, 0, 0, 0
                                size_hint_y: None
                                height: self.minimum_height
                    # output
                    BoxLayout:
                        id: output_view
                        orientation: 'horizontal'
                        padding: 0, 0, 0, 0
                        ScrollView:
                            size_hint: 0.6, 1
                            canvas.before:
                                Color:
                                    rgba: 0.20, 0.20, 0.25, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size[0], self.size[1]
                            BoxLayout:
                                orientation: 'vertical'
                                padding: 0, 0, 0, 0
                                size_hint_y: None
                                height: self.minimum_height
                                Label:
                                    text: 'output setting key'
                        ScrollView:
                            BoxLayout:
                                orientation: 'vertical'
                                padding: 0, 0, 0, 0
                                size_hint_y: None
                                height: self.minimum_height
                                Label:
                                    text: 'output setting value'
            # video preview
            Button:
                id: horizontal_splitter
                on_press: root.button_moved('horizontal_splitter')
                background_normal: app.resources_path+'splitter.png'
                background_down: app.resources_path+'splitter_down.png'
                border: 10, 0, 10, 0
                size: 10, root.size[1]-10
                size_hint: None, None
            BoxLayout:
                id: horizontal_splitter_right
                orientation: 'vertical'
                size_hint: 1.9, 1
                canvas.before:
                    Color:
                        rgba: 0.15, 0.15, 0.15, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Image:
                    allow_stretch: True
                    texture: root.image_texture
                BoxLayout:
                    orientation: 'horizontal'
                    padding: 5, 5, 0, 4
                    size_hint: 1, None
                    height: 42
                    Button:
                        on_press: root.set_zero_frame()
                        background_normal: app.resources_path+'set_zero_frame_button.png'
                        background_down: app.resources_path+'set_zero_frame_button_down.png'
                        border: 0, 0, 0, 0
                        size: 32, 32
                        size_hint: None, None
                    Button:
                        on_press: root.previous_frame()
                        background_normal: app.resources_path+'previous_frame_button.png'
                        background_down: app.resources_path+'previous_frame_button_down.png'
                        border: 0, 0, 0, 0
                        size: 32, 32
                        size_hint: None, None
                    Button:
                        id: playback_button
                        on_press: root.playback_start_or_stop()
                        background_normal: app.resources_path+'playback_button.png'
                        background_down: app.resources_path+'playback_stop_button_down.png'
                        border: 0, 0, 0, 0
                        size: 32, 32
                        size_hint: None, None
                    Button:
                        on_press: root.next_frame()
                        background_normal: app.resources_path+'next_frame_button.png'
                        background_down: app.resources_path+'next_frame_button_down.png'
                        border: 0, 0, 0, 0
                        size: 32, 32
                        size_hint: None, None
                    Button:
                        on_press: print('fullscreen preview')
                        background_normal: app.resources_path+'fullscreen_preview_button.png'
                        background_down: app.resources_path+'fullscreen_preview_button_down.png'
                        border: 0, 0, 0, 0
                        size: 32, 32
                        size_hint: None, None
                    Slider:
                        id: video_time_slider
                        min: 0
                        max: root.frame_max
                        value: 0
                        on_value: root.cursor_moved(self.value)
                        step: 1
                        cursor_image: app.resources_path+'cursor.png'
                        value_track: True
                        value_track_color: 90/255, 90/255, 255/255, 1
                        size_hint: 1, 1
                    Label:
                        id: video_time_label
                        text: '0:00'
                        size: 50, 32
                        size_hint: None, None
        Button:
            id: vertical_splitter
            on_press: root.button_moved('vertical_splitter')
            background_normal: app.resources_path+'splitter.png'
            background_down: app.resources_path+'splitter_down.png'
            border: 0, 10, 0, 10
            size: root.size[0], 10
            size_hint: None, None
        # lower half
        BoxLayout:
            id: vertical_splitter_lower
            canvas.before:
                Color:
                    rgba: 0.15, 0.15, 0.15, 1
                Rectangle:
                    pos: self.pos
                    size: self.size[0], self.size[1]
            padding: 0, 0, 0, 0
            orientation: 'vertical'
            Label:
                text: 'time' if vertical_splitter_lower.height != 0 else ''
                size_hint: 1, None
                height: 50 if vertical_splitter_lower.height != 0 else 0
                canvas.before:
                    Color:
                        rgba: 0.30, 0.30, 0.40, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size[0], self.size[1]
            ScrollView:
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint: 1, None
                        height: 100
                        Label:
                            text: 'video 1'
                            size_hint: None, 1
                            width: 100
                            canvas.before:
                                Color:
                                    rgba: 0.20, 0.20, 0.25, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size[0], self.size[1]
                        Image:
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint: 1, None
                        height: 100
                        Label:
                            text: 'video 2'
                            size_hint: None, 1
                            width: 100
                            canvas.before:
                                Color:
                                    rgba: 0.20, 0.20, 0.25, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size[0], self.size[1]
                        Image:
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint: 1, None
                        height: 100
                        Label:
                            text: 'video 3'
                            size_hint: None, 1
                            width: 100
                            canvas.before:
                                Color:
                                    rgba: 0.20, 0.20, 0.25, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size[0], self.size[1]
                        Image:
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint: 1, None
                        height: 100
                        Label:
                            text: 'video 4'
                            size_hint: None, 1
                            width: 100
                            canvas.before:
                                Color:
                                    rgba: 0.20, 0.20, 0.25, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size[0], self.size[1]
                        Image:
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint: 1, None
                        height: 100
                        Label:
                            text: 'video 5'
                            size_hint: None, 1
                            width: 100
                            canvas.before:
                                Color:
                                    rgba: 0.20, 0.20, 0.25, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size[0], self.size[1]
                        Image:
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint: 1, None
                        height: 100
                        Label:
                            text: 'video 6'
                            size_hint: None, 1
                            width: 100
                            canvas.before:
                                Color:
                                    rgba: 0.20, 0.20, 0.25, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size[0], self.size[1]
                        Image: